<Window x:Class="PT_Lab1.CreatePersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Person" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <Label Content="Name:" Width="70"/>
            <TextBox x:Name="NameTextBox" Width="180"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
            <Label Content="Surname:" Width="70"/>
            <TextBox x:Name="SurnameTextBox" Width="180"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,5">
            <Label Content="Age:" Width="70"/>
            <TextBox x:Name="AgeTextBox" Width="180"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Generate" Click="Generate_Click" Margin="5,0"/>
            <Button Content="OK" IsDefault="True" Click="Ok_Click" Margin="5,0"/>
            <Button Content="Cancel" IsCancel="True" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
